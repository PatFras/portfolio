---
import Badge from "./Badge.astro";
import SocialPill from "./SocialPill.astro";
import GitHub from "./icons/GitHub.astro";
import LinkedIn from "./icons/LinkedIn.astro";
---

<div class="justify-center max-w-xl">
  <div
    class="flex gap-4 mb-4 flex-col items-center text-center md:items-start md:text-left"
  >
    <img
      class="rounded-full shadow-lg size-16"
      src="/Pic.jpg"
      alt="
    Patricio
    Frascaroli
    Foto"
    />
    <a
      href="https://www.linkedin.com/in/patricio-frascaroli-081762253/"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Available to work</Badge>
    </a>
  </div>
  <div
    class="flex flex-col items-center text-center md:items-start md:text-left"
  >
    <h1
      class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
    >
      Patricio Frascaroli
    </h1>
    <p
      class="mt-1 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
    >
      +2 years of experience. <br />
      <strong>Web Full Stack Developer.</strong>
    </p>
    <nav
      class="flex flex-row gap-2 mt-4 text-xs justify-center md:justify-start"
    >
      <SocialPill
        href="https://www.linkedin.com/in/patricio-frascaroli-081762253/"
      >
        <LinkedIn class="size-4" />
        LinkedIn
      </SocialPill>
      <SocialPill href="https://github.com/PatFras">
        <GitHub class="size-4" />
        GitHub
      </SocialPill>
      <SocialPill href="/CV-Patricio Frascaroli-FullStackDev.pdf">
        Resume
      </SocialPill>
    </nav>
  </div>
</div>

